<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - restaurant</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* 插入icon *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/restaurant.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow" style="background-color:#EFE9E9">
            @* iTABLE_LOGO *@
            <div class="ms-4">
                <a class="navbar-brand" asp-controller="Restaurant" asp-action="Index">
                    <img class="mylogo" src="~/img/logo.png" alt="LOGO" style="width:170px;height:70px" />
                </a>
            </div>
            @* 會員按鈕 *@
            <div class="btn-group ms-auto me-5" role="group">
                <button id="btnGroupDrop1" type="button" class="btn btn-outline-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 20 20">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                    </svg>
                    <sapn>登入</sapn>
                </button>
                <ul class="dropdown-menu" aria-labelledby="btnGroupDrop1" style="position: absolute; left: 0; transform: translateX(-70%);">
                    <li><a class="dropdown-item" href="#">我的個人檔案</a></li>
                    <li><a class="dropdown-item" href="#">我的用餐紀錄</a></li>
                    <li><a class="dropdown-item" href="#">我的珍藏餐廳</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <div style="background-color:#FFFDF6">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="text-center text-light text-lg-start pt-2" style="background-color:#212121">
         <!-- Grid container -->
         <div class="container p-5">
             <!--Grid row-->
             <div class="row">
                 <!--Grid column-->
                 <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                     <h5 class="mb-4">iTABLE</h5>

                     <ul class="list-unstyled mb-4">
                         <li>
                             <a href="#">Home</a>
                         </li>
                         <li>
                             <a href="#">Login</a>
                         </li>
                     </ul>
                 </div>
                 <!--Grid column-->
                 <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                     <h5 class="mb-4">Company</h5>

                     <ul class="list-unstyled">
                         <li>
                             信箱:iTABLE2024@gmail.com
                         </li>
                         <li>
                             連絡電話:04-22548871
                         </li>
                         <li>
                             上班時間: 8:00a.m. ~ 18:00p.m.
                         </li>
                     </ul>
                 </div>
                 <!--Grid column-->
                 <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                     <h5 class="mb-4">Join Us</h5>
                     <div class="container d-flex justify-content-center py-2">
                        <button type="button" class="btn btn-primary mx-2" style="background-color: #0866FF;">
                             <i class="fab fa-facebook-f"></i>
                         </button>
                         <button type="button" class="btn btn-primary  mx-2" style="background-color:rebeccapurple;">
                             <i class="fab fa-instagram"></i>
                         </button>
                         <button type="button" class="btn btn-primary  btn-floating mx-2" style="background-color:dodgerblue;">
                             <i class="bi bi-twitter"></i>
                         </button>
                     </div>
                 </div>
                 <!--Grid column-->
                 <!--Grid column-->
                 <div class="col-lg-3 col-md-6 mb-4 mb-lg-0">
                     <h5 class="mb-4">訂閱我們</h5>
                     <form>
                     <div class="form-outline form-white mb-4">
                         <label class="form-label" for="form5Example2">Email address:</label>
                         <input type="email" id="form5Example2" class="form-control" />
                     </div>
                     <button type="submit" class="btn" >訂閱</button>
                    </form>
                 </div>
                 <!--Grid column-->
             </div>
             <!--Grid row-->
         </div>
         <!-- Grid container -->
         <!-- Copyright -->
         <div class="text-center p-4 border-top">
             © 2024 Copyright-iTABLE
         </div>
         <!-- Copyright -->
     </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/Index.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
